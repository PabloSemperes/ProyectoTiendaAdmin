<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NTTShop Administrador</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">*@
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
</head>
<body style="padding-top: 0px">
        <nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark border-bottom border-body" data-bs-theme="dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        @Html.ActionLink("NTTShop Administrador", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        @if (Session["UserID"] != null)
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Usuarios</a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-item">@Html.ActionLink("Usuarios", "Usuarios", "Usuarios", null, new { @class = "nav-link text-light" })</li>
                                    <li class="dropdown-item">@Html.ActionLink("Usuarios Administradores", "UsuariosAdministradores", "UsuariosAdministradores", null, new { @class = "nav-link text-light" })</li>
                                </ul>
                            </li>
                            <li class="nav-item"></li>
                            <li class="nav-item">@Html.ActionLink("Productos", "Productos", "Productos", null, new { @class = "nav-link text-light" })</li>
                            <li class="nav-item">@Html.ActionLink("Pedidos", "ListarOrders", "Orders", null, new { @class = "nav-link text-light" })</li>
                            <li class="nav-item">@Html.ActionLink("Lenguajes", "Language", "Language", null, new { @class = "nav-link text-light" })</li>
                            <li class="nav-item">@Html.ActionLink("Cerrar sesión", "LogOut", "Login", null, new { @class = "nav-link text-light" })</li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    <div class="container body-content flex-grow-1" style="margin-top:10px;">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <p class="text-muted">&copy; @DateTime.Now.Year - NTTShop Administrador</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>*@
</body>
</html>
